<%- include('../../partials/head.ejs' ) %>

<div class=" container my-container my-5">
       <div class="row">
           <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                        <h4>Create a New Account</h4>
                        <form action="/auth/signup" method="POST">
                            <div class="form-group mb-2">
                                <label for="username">Enter a User Name</label>
                                <input type="text" name="username" class="form-control <%= error.username? 'is-invalid' :'' %> " value= "<%= value.username? value.username: '' %>"> 
                                <div class="invalid-feedback">
                                    <%= error.username && error.username%>
                                </div>
                            </div>
                          
                            <div class="form-group mb-2">
                                <label for="email">Enter a User Name</label>
                                <input type="email" name="email" 
                                id="email"
                                class="form-control <%= error.email? 'is-invalid' :'' %>" value= "<%= value.email? value.email :'' %>">
                                <div class="invalid-feedback">
                                    <%= error.email && error.email %>
                                </div>
                            </div>
                            <div class="form-group mb-2">
                                <label for="password">Enter a  Password</label>
                                <input type="password" name="password" class="form-control <%= error.password? 'is-invalid' :'' %>" value= "<%= value.password? value.password:'' %>">
                                <div class="invalid-feedback">
                                    <%= error.password && error.password %>
                                </div>
                            </div>
                            <div class="form-group mb-2">
                                <label for="confrimPassword">Confirm your password </label>
                                <input type="password" name="confirmPassword"
                                id="confirmPassword"
                                 class="form-control <%= error.confirmPassword? 'is-invalid' :'' %>"  >
                                 <div class="invalid-feedback">
                                    <%= error.confirmPassword && error.confirmPassword %>
                                </div>
                            </div>
                            <input type="submit" value="Submit" class="btn btn-primary mt-2">

                        </form>
                        <a href="/auth/login" class="my-3 text-center">Already have an account? Login</a>
                </div>
           </div>
       </div>
</div>
<%- include('../../partials/fotter.ejs')%>
</body>
</html>

